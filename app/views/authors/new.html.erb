<h1>Create Author:</h1>
<%= form_for(@author) do |f| %>

  <%= f.label :name %>:<br>
  <%= f.text_field :name %><br><br>

  Birthdate:<br>
  
  <%= date_field(:author, :birthdate) %><br><br>

  <%= f.label :bio %>graphy:<br>
  <%= f.text_area :bio, cols: "80", rows: "10" %><br><br>

  <%= f.submit %>

<% end %>