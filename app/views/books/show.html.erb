<h1> <%= @book.title %> </h1>
<h2> By: <%= link_to @book.author.name, author_path(@book.author) %> </h2>
<h2> Genre: <%= link_to @book.genre.name, genre_path(@book.genre) %> </h2>
<%= link_to "Edit Book", edit_book_path %><br>
<%= link_to "Delete", delete_book_path(@book.id), method: :delete, data: { confirm: "Are you sure you want to delete #{@book.title}?" } %>
