<% if !session[:user_id] %>
  <%= link_to "Sign In", sessions_new_path %>
  &emsp;
  <%= link_to "Sign Up", new_user_path %>
<% end %>

<h1>Home</h1>
<% @books.each do |book| %>
  <h3><li><%= link_to book.title, book_path(book) %> by <%= link_to book.author.name, author_path(book.author) %></li></h3>
<% end %>
